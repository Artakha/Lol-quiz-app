<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guykit.lolquizz.ItemQuizActivity"
    android:background="@drawable/riven">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="293dp"
        android:layout_height="44dp"
        app:srcCompat="@color/colorAccent"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="46dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@color/colorAccent"
        android:layout_marginLeft="152dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginStart="152dp" />

    <Button
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="136dp"
        android:onClick="nextQuestion"
        android:text="Begin Quiz"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="136dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="279dp"
        android:layout_height="43dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        android:text="This quiz will test you on your knowledge of items"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="53dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="162dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="215dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@color/colorAccent"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="33dp"
        android:onClick="checkAns1"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/button10"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="-5dp"
        android:onClick="checkAns2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="0dp"
        android:onClick="checkAns3"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button12"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="0dp"
        android:onClick="checkAns4"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

</android.support.constraint.ConstraintLayout>
